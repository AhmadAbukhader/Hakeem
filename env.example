# ===========================================
# Hakeem System - Docker Environment Variables
# ===========================================
# INSTRUCTIONS:
# 1. Copy this file: cp env.example .env
# 2. Fill in your actual values
# 3. Never commit .env to git (add to .gitignore)
# ===========================================

# ===========================================
# Database Configuration
# ===========================================
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/hakeem?stringtype=unspecified
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_database_password_here
SPRING_JPA_PROPERTIES_HIBERNATE_DEFAULT_SCHEMA=hakeem_schema
SPRING_DATASOURCE_HIKARI_CONNECTION_INIT_SQL=SET search_path TO hakeem_schema,public

# ===========================================
# JWT Configuration
# ===========================================
SECURITY_JWT_SECRET_KEY=your_jwt_secret_key_here
SECURITY_JWT_EXPIRATION_TIME=3600000

# ===========================================
# Email Configuration (Gmail SMTP)
# ===========================================
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your_email@gmail.com
SPRING_MAIL_PASSWORD=your_app_password_here
SPRING_MAIL_PROPERTIES_MAIL_SMTP_AUTH=true
SPRING_MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_ENABLE=true

# ===========================================
# CORS Configuration
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:8005

# ===========================================
# WebSocket Configuration
# ===========================================
WEBSOCKET_ALLOWED_ORIGINS=*

# ===========================================
# Logging Configuration
# ===========================================
LOGGING_LEVEL_ORG_HIBERNATE_SQL=INFO
SPRING_JPA_SHOW_SQL=false

# ===========================================
# Twilio Configuration (Voice Call Notifications)
# ===========================================
# Set to false to disable voice calls
TWILIO_ENABLED=true

# Your Twilio Account SID (from Twilio Console)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here

# Your Twilio Auth Token (from Twilio Console)
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Your Twilio Phone Number (the number you purchased)
TWILIO_PHONE_NUMBER=+1234567890

# The URL Twilio will call to get TwiML (your server's public URL)
TWILIO_VOICE_URL=http://your-server-ip:8089/voice/emergency-notification
